generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["file_uploader"]
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  username  String   @unique
  password  String
  folders   Folder[]

  @@map("file_uploader_users")
  @@schema("file_uploader")
}

model Folder {
  id     Int    @id @default(autoincrement())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  files  File[]

  @@unique([name, userId])
  @@map("file_uploader_folders")
  @@schema("file_uploader")
}

model File {
  id           Int      @id @default(autoincrement())
  name         String
  size         Int
  supabasePath String
  mimeType     String?
  createdAt    DateTime @default(now())
  folder       Folder   @relation(fields: [folderId], references: [id])
  folderId     Int

  @@map("file_uploader_files")
  @@schema("file_uploader")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@schema("file_uploader")
}
