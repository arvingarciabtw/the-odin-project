<!doctype html>
<html>
  <head>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="icon" type="image/webp" href="/images/logo_optimized.webp">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
  </head>
  <body>
    <%- include('../navbar') %>
    <main>
      <%- include('../description', { heading: 'Update a Platform', description: 'Choose an existing platform from the dropdown, type in the new name for that selected platform, and click on submit when finished!'}) %>
      <form>
        <label for="edit-platform-choose">Choose a Platform</label>
        <select name="edit-platform-choose" id="edit-platform-choose">
          <option value="volvo">Volvo</option>
          <option value="saab">Saab</option>
          <option value="mercedes">Mercedes</option>
          <option value="audi">Audi</option>
        </select>
        <label for="edit-platform">New Platform Name</label>
        <input type="text" id="edit-platform" name="edit-platform" placeholder="e.g. Nintendo Switch 2">
        <button>Submit</button>
      </form>
    </main>
    <%- include('../footer') %>
  </body>
</html>
